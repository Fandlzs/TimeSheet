<Window x:Class="TimeSheet.Classes.CreateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSheet.Classes"
        mc:Ignorable="d"
        Title="Creating New Employee" Height="322" Width="302.468" Background="#FFCDCDCD">
    <Grid>
        

        <TextBox x:Name="BtnFirstName" HorizontalAlignment="Left" Height="23" Margin="25,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="BtnLastName" HorizontalAlignment="Left" Height="23" Margin="25,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="First name" HorizontalAlignment="Left" Margin="25,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Last name" HorizontalAlignment="Left" Margin="25,87,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnCreate" Content="Create" HorizontalAlignment="Left" Margin="25,158,0,0" VerticalAlignment="Top" Width="75" Click="BtnCreate_Click"/>
        <Image Margin="151,175,22,10" Source="/TimeSheet;component/Employees.png" Stretch="Fill"/>

    </Grid>
</Window>
